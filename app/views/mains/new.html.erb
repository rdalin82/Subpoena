<form class="form-horizontal" controller='mains' action='create' method='post'>
  <div class="form-group">
    <h1>New Subpoena</h1>
    <h2>Providers</h2>
    <% unless @dropbox %>
    <%= link_to image_tag("dropbox_connect.png"), dropbox_authorize_path, {:class => "dropbox-connect"} %>
    <% else %>
    <% end%>
    <select name="providers" class="form-control">
    	<% @providers.each do |provider| %> 
    	   <option value=<%=provider.id%>><%=provider.name%></option>
    	<% end %> 
    </select>
    <br>
  <div>  
  <div><%= link_to "Providers Page", providers_path, class: "btn btn-lg btn-primary" %> </div>
    <h2>Attorneys</h2>
        <select name="attorneys" class="form-control">
        	<% @attorneys.each do |attorney| %> 
        	   <option value=<%=attorney.id%>><%=attorney.name%></option>
        	<% end %>
        </select>
        <div><%= link_to "Attorney Page", attorneys_path, class: "btn btn-lg btn-primary" %> </div><br>
     <div class="input-group">
         <div>Case Number: <input name='n1' size='3x1' class: "form-control"> WC <input name='n2' size='6x1' class: "form-control"></div><br>
         <div>Employee: <input name='employee' class: "form-control"></div><br>
         <div>Employer: <input name='employer' class: "form-control"></div><br>
         <div>Docket: <input name='docket' class: "form-control"> </div>
         <div>Return Date: <input name='returndate' class: "form-control"></div>
         <div>Today's Date: <input name='todaysdate' class: "form-control"></div><br>
    </div>
    <div class="form-group btn-group">
      <input type='submit' value='Submit' class="btn btn-lg btn-success">
    </div>
  </div>
</form>