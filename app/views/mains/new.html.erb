<h1>New Subpoena</h1>
<form class="form-horizontal" controller='mains' action='create' method='post'>
  <div class="form-group">
    <h2>Providers</h2>
    <% unless @dropbox %>
    <%= link_to image_tag("dropbox_connect.png"), dropbox_authorize_path, {:class => "dropbox-connect"} %>
    <% else %>
    <% end%>
     
    <select name="providers">
    	<% @providers.each do |provider| %> 
    	<option value=<%=provider.id%>><%=provider.name%></option>
    	<% end %> 
    </select>

    <br>
  </div>
  <div class="form-group">  
    <div><%= link_to "Providers Page", providers_path %> </div>

    <h2>Attorneys</h2>

    <select name="attorneys">
    	<% @attorneys.each do |attorney| %> 
    	<option value=<%=attorney.id%>><%=attorney.name%></option>
    	<% end %>
    </select>
     <div><%= link_to "Attorney Page", attorneys_path %> </div><br>
     <div class="form-group">Case Number: <input name='n1' size='3x1'> WC <input name='n2' size='6x1'></div><br>
     <div class="form-group">Employee: <input name='employee'></div><br>
     <div class="form-group">Employer: <input name='employer'></div><br>
     <div class="form-group">Docket: <input name='docket'> </div>
     <div class="form-group">Return Date: <input name='returndate'></div>
     <div class="form-group">Today's Date: <input name='todaysdate'></div>
    <br>
    
  </div>
    <div class="form-group">
      <input type='submit' value='Submit'>
  </div>
</form>